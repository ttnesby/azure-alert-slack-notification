{
	log {
		format console
		level info
	}
}

(to-slack) {
	az_alert_slack_notification
	reverse_proxy https://hooks.slack.com {
		header_up Host {upstream_hostport}
	}
}

http://localhost {
	encode zstd gzip
	# rate_limit details
	# waf details

	route /slack/testvarsel* {
		rewrite {$SLACK_TEST_NOTIFICATION}
		import to-slack
	}

	route /slack/azureplatformalerts* {
		rewrite {$SLACK_PROD_NOTIFICATION}
		import to-slack
	}

	handle /health* {
		respond "I'm fine" 200
	}
}
